{
  "manifest_version": 3,
  "name": "My Prompt Helper",
  "version": "1.0",
  "description": "預設高品質 Prompt，並支援自定義常用指令。",
  "permissions": ["storage", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "打開 Prompt 助手"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "prompt-manager@example.com",
      "strict_min_version": "109.0"
    }
  }
}
